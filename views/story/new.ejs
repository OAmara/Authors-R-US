<%-include('../partials/header.ejs')%>

<h1>Create Your Story</h1>


<form method="POST" action="/stories/create">
	<fieldset>
		<label for="title">Title: </label>
		<input required minlength="1" class="form-control" id='title' type="text" name="title" placeholder="Your Story Title" >
		<label for="genre">Genre: </label>
		<input required minlength="1" class="form-control" id='genre' type="text" name="genre" placeholder="Enter Story Genre" >
		<label for="body">Your Story:</label>
		<textarea required minlength="1" class="form-control" id='body' name='body' 
		maxlength="1500" rows='10' cols='30'
		spellcheck="true" placeholder="It was a dark stormy night...." ></textarea>
		<button class="btn btn-success">Create Story</button>
	</fieldset>
</form>




<%-include('../partials/footer.ejs')%>
